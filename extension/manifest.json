{
  "manifest_version": 3,
  "name": "Smart Download Renamer",
  "version": "1.0.0",
  "description": "AI-powered renaming for images and PDFs using Hugging Face Inference Providers - fast, smart, and free to start!",
  "permissions": [
    "downloads",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://router.huggingface.co/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Download Renamer"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}